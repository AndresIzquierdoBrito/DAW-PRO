@page
@model EJ07_Views.Pages.Exercises.Pages_Exercises_Ejercicio1
@{
    ViewData["Title"] = "Ejercicio 5 - EJ0703";
}

<h2>Creación de tabla</h2>
<form name="formEje5" method="post">
    @if (Request.Method == "POST")
    {
       <p>
           <label for="filas">Filas:</label>
           <select name="filas" id="filas">
               <option value="1">1</option>
               <option value="2">2</option>
               <option value="3">3</option>
           </select>
       </p>
       <p>
            <label for="filas">Filas:</label>
            <select name="columnas" id="columnas" size="3">
                <option value="1">1</option>
                <option value="2">2</option>
                <option value="3">3</option>
            </select>
        </p>

        if (int.TryParse(Request.Form["filas"], out int rows) && int.TryParse(Request.Form["columnas"], out int columns))
        {
            int nums = 1;
            <table>
            @for(int i = 0; i < rows; i++)
            {
                <tr>
                    @for(int j = 0; j < columns; j++)
                    {
                        <td>@(nums++)</td>   
                    }
                </tr>
            }
            </table>
        }
        <div class="tableEj5">
           
       </div>
    }
    else
    {
        <p>
            <label for="filas">Filas:</label>
            <select name="filas" id="filas">
                <option value="1">1</option>
                <option value="2">2</option>
                <option value="3">3</option>
            </select>
        </p>
        <p>
            <label for="filas">Filas:</label>
            <select name="filas" id="filas" size="3">
                <option value="1">1</option>
                <option value="2">2</option>
                <option value="3">3</option>
            </select>
        </p>
    }
    <p><input type="submit" class="submitButton" value="Rellenar"/></p>
</form>